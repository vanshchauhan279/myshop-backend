const mongoose = require("mongoose");
const {Schema} = mongoose;

const cartSchema = new Schema({
    product: {
        type: Schema.Types.ObjectId,
        ref: 'Prdoduct',
        required: true
    },
    quantity: {
        type: Number,
        default: 1,
        min: 1
    },
    user: {
        type: Schema.Types.ObjectId,
        ref: 'User',
        required: true
    },
    addedAt: {
        Type: String,
        default: Date.now
    }
})

const Cart = mongoose.model('Cart',cartSchema);
module.exports = Cart;